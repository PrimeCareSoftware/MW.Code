{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MedicSoft.Telemedicine": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_URL}"
  },
  "JWT": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "https://medicsoft.com.br",
    "Audience": "https://api.medicsoft.com.br",
    "ExpirationMinutes": 60
  },
  "VideoProvider": "Twilio",
  "TwilioVideo": {
    "AccountSid": "${TWILIO_ACCOUNT_SID}",
    "ApiKeySid": "${TWILIO_API_KEY_SID}",
    "ApiKeySecret": "${TWILIO_API_KEY_SECRET}"
  },
  "DailyCo": {
    "ApiKey": "${DAILYCO_API_KEY}"
  },
  "FileStorage": {
    "Provider": "AzureBlob",
    "AzureBlob": {
      "ConnectionString": "${AZURE_STORAGE_CONNECTION_STRING}",
      "ContainerName": "telemedicine-files"
    },
    "Encryption": {
      "Enabled": true
    }
  },
  "CfmValidation": {
    "ApiUrl": "https://portal.cfm.org.br/api/v1",
    "CacheExpirationMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [
      "${FRONTEND_URL}",
      "${ADMIN_URL}"
    ]
  }
}
