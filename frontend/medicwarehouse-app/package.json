{
  "name": "primecare-frontend",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "audit:a11y": "pa11y-ci --sitemap http://localhost:4200/sitemap.xml || pa11y http://localhost:4200",
    "audit:axe": "node src/scripts/audit-a11y.js",
    "audit:lighthouse": "lighthouse http://localhost:4200 --only-categories=accessibility --output=html --output-path=./a11y-reports/lighthouse-a11y.html",
    "test:a11y": "ng test --include='**/*.a11y.spec.ts'"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/service-worker": "^20.3.0",
    "@microsoft/signalr": "^10.0.0",
    "apexcharts": "^5.3.6",
    "date-fns": "^4.1.0",
    "ng-apexcharts": "^2.0.4",
    "ngx-quill": "^28.0.2",
    "quill": "^2.0.2",
    "rxjs": "~7.8.0",
    "shepherd.js": "^14.5.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@axe-core/puppeteer": "^4.10.2",
    "@types/jasmine": "~5.1.0",
    "axe-core": "^4.10.2",
    "jasmine-axe": "^1.0.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lighthouse": "^12.2.1",
    "pa11y-ci": "^3.1.0",
    "puppeteer": "^23.11.1",
    "typescript": "~5.9.2"
  }
}
