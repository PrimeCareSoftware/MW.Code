# ============================================
# SEGURANÇA (Opcional - já tem defaults)
# ============================================
# Exigir HTTPS em produção
# SECURITY_REQUIRE_HTTPS=true

# Limite de tentativas de login
# SECURITY_MAX_LOGIN_ATTEMPTS=5

# Duração do bloqueio (minutos)
# SECURITY_LOCKOUT_DURATION_MINUTES=15

# ============================================
# RATE LIMITING (Opcional - já tem defaults)
# ============================================
# Ativar rate limiting
# RATE_LIMITING_ENABLED=true

# Número de requisições permitidas por janela
# RATE_LIMITING_PERMIT_LIMIT=100

# Janela de tempo (segundos)
# RATE_LIMITING_WINDOW_SECONDS=60

# ============================================
# LOGS (Opcional)
# ============================================
# Nível de log (Trace, Debug, Information, Warning, Error, Critical)
# LOG_LEVEL=Information

# ============================================
# EMAIL (SMTP Configuration)
# ============================================
# Servidor SMTP (Hostinger: smtp.hostinger.com, Gmail: smtp.gmail.com)
EMAIL_SMTP_SERVER=smtp.hostinger.com
# Porta SMTP (587 com TLS, 465 com SSL)
EMAIL_SMTP_PORT=587
# Usar SSL/TLS
EMAIL_USE_SSL=true
# Usuário SMTP (email completo)
EMAIL_USERNAME=noreply@seudominio.com.br
# Senha da conta de email
EMAIL_PASSWORD=
# Email remetente
EMAIL_FROM=noreply@seudominio.com.br
# Nome do remetente
EMAIL_FROM_NAME=PrimeCare Software
# Habilitar envio de emails
EMAIL_ENABLED=true
# Timeout em segundos
EMAIL_TIMEOUT_SECONDS=30

# ============================================
# SMS (Se configurado)
# ============================================
# SMS_PROVIDER=twilio
# SMS_ACCOUNT_SID=seu-account-sid
# SMS_AUTH_TOKEN=seu-auth-token
# SMS_FROM_NUMBER=+5511999999999

# ============================================
